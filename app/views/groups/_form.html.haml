= form_for @group do |f|
  - if @group.errors.any?
    .chat-group-form__errors
      %h2
        = @group.errors.count
        件のエラーがあります。
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :name, "グループ名", class: "chat-group-form__field__label"
    .chat-group-form__field--right
      = f.text_field :name, placeholder:"グループ名を入力してください", class: "chat-group-form__field__input"
    .chat-group-form__field--left
      = f.label :user, "チャットメンバーを追加", class: "chat-group-form__field__label"
    .chat-group-form__field--right.js-add
      %input{placeholder:"追加したいユーザー名を入力してください", class: "chat-group-form__field__input", id:"chat-input"}
      .user-search-result
    .chat-group-form__field--left.js
      = f.label :user, "チャットメンバー", class: "chat-group-form__field__label"
    .chat-group-form__field--right
      .user-search-result-add
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit "登録する", class: "chat-group-form__action-btn"
